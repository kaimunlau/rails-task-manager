<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>Done: <input type="checkbox" <%= @task.completed ? "checked" : "" %>></p>
<%= link_to "Edit this task", edit_task_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Back to all tasks", tasks_path %>
