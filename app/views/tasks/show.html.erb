<div class="container">
  <div class="border rounded shadow w-50 pt-3 pb-4 px-3">
    <h1><%= @task.title %></h1>
    <p><%= @task.details %></p>
    <div class="d-flex gap-1">
      <p>Done:</p>
      <% if @task.completed %>
        <i class="fa-regular fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
    </div>
    <div class="d-flex gap-2">
      <%= link_to "Edit", edit_task_path, class: 'btn btn-primary shadow-sm' %>
      <%= link_to "Delete",
        task_path(@task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: 'btn btn-danger shadow-sm'
      %>
      <%= link_to "Back to all tasks", tasks_path, class: 'btn btn-light shadow-sm' %>
    </div>
  </div>
</div>
